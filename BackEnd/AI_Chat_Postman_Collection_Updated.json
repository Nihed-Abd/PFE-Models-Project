			"script": {
				"type": "text/javascript",
				"exec": [
					"// Automatically save the token after login",
					"if (pm.response.code === 200 && pm.request.url.toString().includes('/login')) {",
					"    var jsonData = pm.response.json();",
					"    if (jsonData.token) {",
					"        pm.environment.set('bearer_token', jsonData.token);",
					"        console.log('Token saved to environment variable!');",
					"    }",
					"}"
				]
			}
		}
